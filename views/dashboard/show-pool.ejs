<script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/5.0.0/echarts.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.bundle.js"></script>
<script src="/dataVis/pHGaugeMin.js"></script>
<script src="/dataVis/alkGaugeMin.js"></script>
<script src="/dataVis/clGaugeMin.js"></script>
<script src="/js/buildDashboard.js"></script>
